   <!-- ğŸ” Search form -->
  <form method="GET" action="/visitors" style="margin: 10px 0;">
    <input type="text" name="search" value="<%= search %>" placeholder="Search by name">
    <button type="submit">ğŸ” Search</button>
  </form>

  <form method="GET" action="/visitors">
