    <button type="submit">ğŸ“… Filter by Date</button>
  </form>
  
  
  <a href="/">Add New Visitor</a>
  <ul>
  <% visitors.forEach(visitor => { %>
    <li>
      <strong><%= visitor.name %></strong> - <%= visitor.purpose %> 
      (<%= visitor.date.toLocaleString() %>)

      <!-- âœï¸ Edit button -->
      <a href="/edit-visitor/<%= visitor._id %>">âœï¸ Edit</a>

      <!-- ğŸ—‘ï¸ Delete button -->
      <form action="/delete-visitor/<%= visitor._id %>" method="POST" style="display: inline;">
        <button type="submit" onclick="return confirm('Are you sure you want to delete this visitor?')">ğŸ—‘ï¸ Delete</button>
      </form>
    </li>
  <% }) %>
  </ul>
  <div>
    <% if (currentPage > 1) { %>
      <a href="/visitors?page=<%= currentPage - 1 %>&search=<%= search %>">â¬…ï¸ Previous</a>
    <% } %>
  
    <span> Page <%= currentPage %> of <%= totalPages %> </span>
  
    <% if (currentPage < totalPages) { %>
      <a href="/visitors?page=<%= currentPage + 1 %>&search=<%= search %>">Next â¡ï¸</a>
    <% } %>
  </div>
  
</body>
</html>
